{
  "ConnectionStrings": {
    "ApiDatabase": "Data Source=LocalDb.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SerilogOptions": {
    "LogLevel": "Information",
    "FilePath": "../logs/example-.log",
    "FilePathExternal": "../logs/example-external-.log",
    "FilePathApiRequestResponse": "../logs/example-api-request-response-.log",
    "OutputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {CorrelationId} {Level:u3}] {Message:lj} {NewLine} {Exception}"
  }
}
